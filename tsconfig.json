{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",

    // Strict mode.
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictBuiltinIteratorReturn": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["src/**/*"]
}
